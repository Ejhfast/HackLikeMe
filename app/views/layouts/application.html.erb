<!DOCTYPE html>
<html>
<head>
  <title>HackLikeMe</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'http://connect.facebook.net/en_US/all.js' %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="login">
	<% if current_user %>
		<%= link_to '[Sign Out]', sign_out_path %>
	<% else %>
		<%= link_to (image_tag 'twitter.png', :width => 30), '/auth/twitter' %>
		<%= link_to (image_tag 'facebook.png', :width => 30), '/auth/facebook' %>
	<% end  %>
	</div>
	<br />
	<div id="content">
	<header>
		<div id="title">
			<h1>Hack Like Me</h1>
		</div>
	</header>
	<% if flash[:error] %>
		<div id="subheading">
			<h2>
				Wait a moment!		
			</h2>
		</div>
		<div id="quip">
			<p> <%= flash[:error] %></p>
		</div>
	<% end %>

<%= yield %>
</div>

</body>
</html>
